@code
{
    uint n = 1;
    ulong result = 1;

    void FactorielW()
    {
        uint counter = 1;
        result = 1;
        while (counter <= n)
        {
            // Exactly one should be selected among the 3
            // 1) equivalent longer alternative
            // result = result * counter;
            // counter = counter + 1;
            // 2) equivalent shorter alternative
            // result *= counter;
            // counter += 1;
            // 3) equivalent the shortest
            result *= counter;
            counter++;
        }
    }


    uint n2 = 1;
    ulong result2 = 1;

    void FactorielWD()
    {
        result2 = 1;
        uint counter = n2;
        while (counter >= 1)
        {
            result2 *= counter;
            counter--;
        }
    }

    uint n3 = 1;
    ulong result3 = 1;

    void FactorielD()
    {
        result3 = 1;
        uint counter = n3;
        do
        {
            result3 *= counter;
            counter++;
        } while (counter <= n3);
    }

    uint n4 = 4;
    ulong result4 = 1;
    void FactorielDD()
    {
        result4 = 1;
        uint counter = n4;
        do
        {
            result4 *= counter;
            counter--;
        } while (counter >= 1);
    }


    uint n5 = 1;
    ulong result5 = 1;
    void FactorielF()
    {
            result5 = 1;
        for (uint counter = 1; counter <= 5; counter++)
        {
            result5 *= counter;
            //Console.Write(counter + " " + result5 + " ");
        }
    }
}